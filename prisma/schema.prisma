model Sneaker{
  id          String @id @default(cuid())
  slug        String @unique
  marque      String 
  model       String
  description String @db.Text
  
  price       Float
  promoPrice  Float
  isPromo     Boolean

  stock Int

  colorSecondaries ColorSecondary[]
  colorPrimary ColorPrimary?
  sizes Size[]

  categoryId  String?
  category CategorySneaker? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  themes Theme[]
  tags TagSneaker[]

  likes LikeSneaker[]

  images ImageSneaker[]

  customizations Customization[]

  createdAt DateTime
  updatedAt DateTime @updatedAt
}

model Size{
  id String @id @default(cuid())
  size Int
  quantity Int
  sneakerId String
  sneaker Sneaker @relation(fields:[sneakerId], references: [id], onDelete: Cascade)
}

model ColorPrimary{
  id String @id @default(cuid())
  name String
  color String

  sneakerId String @unique
  sneaker Sneaker @relation(fields:[sneakerId], references: [id], onDelete: Cascade)
}
model ColorSecondary{
  id String @id @default(cuid())
  name String
  color String
  sneakerId String
  sneaker Sneaker @relation(fields:[sneakerId], references: [id], onDelete: Cascade)
}

model ImageSneaker{
  id String @id @default(cuid())
  publicId String
  secureUrl String
  sneakerId String 
  sneaker Sneaker @relation(fields: [sneakerId], references: [id], onDelete: Cascade)
}

model CategorySneaker{
  id String @id @default(cuid())
  name String
  description String @db.Text

  designer String
  popularity Int @default(0)
  sneaker Sneaker[]

  createdAt DateTime
  updatedAt DateTime @updatedAt
}
model TagSneaker{
  id String @id @default(cuid())
  name String
  description String @db.Text

  popularity Int @default(0)
  sneakers Sneaker[]
  
  createdAt DateTime
  updatedAt DateTime @updatedAt
}

model LikeSneaker{
  id        String  @id @default(cuid())

  sneakerId String
  sneaker   Sneaker @relation(fields: [sneakerId], references: [id], onDelete: Cascade)

  userId    String?
  user      User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

