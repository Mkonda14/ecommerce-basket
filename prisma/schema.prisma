model Theme{
  id String @id @default(cuid())
  name String
  description String @db.Text

  image ImageTheme?

  popularity Int @default(0)
  sneakers Sneaker[]

  categoryId String?
  category CategoryTheme? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  likes LikeTheme[]

  createdAt DateTime
  updatedAt DateTime @updatedAt
}

model ImageTheme{
  id String @id @default(cuid())

  publicId String
  secureUrl String

  themeId String @unique
  theme Theme @relation(fields: [themeId], references: [id], onDelete: Cascade)
}

model CategoryTheme{
  id String @id @default(cuid())
  name String
  secondName String
  description String @db.Text

  popularity Int @default(0)
  theme Theme[]

  createdAt DateTime
  updatedAt DateTime @updatedAt
}

model LikeTheme{
  id String @id @default(cuid())

  themeId String
  theme Theme @relation(fields: [themeId], references: [id], onDelete: Cascade)

  userId String?
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

}

// -----------Graffiti--------

model Graffiti {
  id String @id @default(cuid())
  name String
  description String @db.Text
  image ImageGraffiti?

  categoryId String?
  category CategoryGraffiti? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  defaultColors DefaultColorGraffiti[]

  textMinLength Int?
  textMaxLength Int?
  textMaxWords Int?

  popularity Int @default(0)
  likes LikeGraffiti[]

  createdAt DateTime
  updatedAt DateTime @updatedAt
  customizations Customization[]
}

model ImageGraffiti{
  id String @id @default(cuid())

  publicId String
  secureUrl String

  graffitiId String @unique
  graffiti Graffiti @relation(fields: [graffitiId], references: [id], onDelete: Cascade)
}

model CategoryGraffiti{
  id String @id @default(cuid())
  name String
  secondName String?
  description String @db.Text

  popularity Int @default(0)
  graffitis Graffiti[]

  createdAt DateTime
  updatedAt DateTime @updatedAt
}

model DefaultColorGraffiti{
  id String @id @default(cuid())
  name String
  color String

  graffitiId String
  graffiti Graffiti @relation(fields:[graffitiId], references: [id], onDelete: Cascade)
}

model LikeGraffiti{
  id String @id @default(cuid())

  graffitiId String
  graffiti Graffiti @relation(fields: [graffitiId], references: [id], onDelete: Cascade)

  userId String?
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

}

model Customization{
  id String @id @default(cuid())
  text String
  instruction String @db.Text
  description String @db.Text

  colors ColorCustomization[]

  sneakerId String?
  sneaker Sneaker? @relation(fields: [sneakerId], references: [id], onDelete: SetNull)

  graffitiId String
  graffiti Graffiti @relation(fields: [graffitiId], references: [id], onDelete: Cascade)

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)


  createdAt DateTime
  updatedAt DateTime @updatedAt
}

model ColorCustomization{
  id String @id @default(cuid())
  name String?
  color String?
  
  customizationId String
  customization Customization @relation(fields:[customizationId], references: [id], onDelete: Cascade)
}


